{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "1.0.0",
  "description": "__MSG_extensionDescription__",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "default_locale": "en",
  "host_permissions": [
    "https://www.mercari.com/*",
    "https://jp.mercari.com/*",
    "https://*.mercari.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://jp.mercari.com/*",
        "*://www.mercari.com/*",
        "*://*.mercari.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "warning.css"
      ]
    }
  ]
}
